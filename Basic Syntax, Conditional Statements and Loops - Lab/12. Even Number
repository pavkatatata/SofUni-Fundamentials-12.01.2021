using System;

namespace ddddd
{
    class Program
    {
        static void Main(string[] args)
        {

            int num = Math.Abs(int.Parse(Console.ReadLine()));
           
            while ( num % 2 != 0 )
            {
                Console.WriteLine("Please write an even number.");
                num = Math.Abs(int.Parse(Console.ReadLine()));

            }
            
            Console.WriteLine($"The number is: {num}");

        }
    }
}
